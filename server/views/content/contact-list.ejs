<h1>Contact List</h1>
<div class="row">
<div class="col">

   <a href="/add" id="addButton" class="btn btn-primary btn-sm mb-1">
       <i class="fas fa-plus-circle fa-sm">Add Contact</i>
   </button>

   <table class="table table-striped table-boarded table-hover">
       <thead class="table-dark">
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Contact Number</th>
                <th scope="col">Email Address</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
       </thead>
       <tbody id="contactList">
       <% for (let count=0; count < contacts.length; count++) { %>
       <tr>
           <th scope="row" class="text-center"><% count + 1%></th>
           <td><%= contact[count].FullName} %></td>
           <td><%= contact[count].ContactNumber %></td>
           <td><%= contact[count].EmailAddress %></td>

           <td class="text-center">
               <a href="/edit/<%= contact[count]._id %>" class="btn btn-primary btn-sm edit">
                   <i class="fas fa-edit fa-sm">Edit</i>
               </a>
           </td>
           <td class="text-center">
               <a href="/delete/<%= contact[count].id %>"  class="btn btn-danger btn-danger delete">
                   <i class="fas fa-trash-alt fa-sm">Delete</i>
               </a>
           </td>
       </tr>
       <% } %>
       </tbody>
   </table>

</div>

</div>
