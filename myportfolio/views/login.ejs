<%- include('partials/login') %>
<%- include('./partials/header', {app: app_const, session, title: "Login"}); %>
<style>
    body {
        background-color: #FFF;
    }
</style>

<header class="main_header">
        <h1> Login </h1>
</header>

<!-- Page content-->
<main>

    <section>

        <div class="container">
            <div class="cform">
                <div class="cform_wrapper">
                    <% if(flash_message != ""){ %>
                    <div class="alert alert-danger"><%= flash_message %></div>
                    <% } %>
                    <form id="cform" method="POST" action="/login">
                        <span class="text-danger" id="form_error"></span>
                        <div class="form-group">
                            <label for="Username"><b>Username</b></label>
                            <input  required class="form-control"  placeholder="Enter Username" id="username" name="username">
                        </div>
                        <div class="form-group">
                            <label for="password"><b>Password</b></label>
                            <input required class="form-control" type="password" placeholder="Enter Password" id="password" name="password" required>
                        </div>
                        <div class="form-group" id="sbutton">
                            <button type="submit" class="btn px-5 btn-block btn-primary">Login</button>
                        </div>

                        <div style="float:right">
                            <span>Don't Have An account? <a href="/sign-up"> Sign Up Here</a></span>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </section>
</main>

<%- include('./partials/footer', {app: app_const}); %>